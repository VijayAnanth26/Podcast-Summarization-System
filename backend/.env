# Backend Environment Variables

# API Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=50000000  # 50MB in bytes

# Timeouts (in seconds)
TOPIC_DETECTION_TIMEOUT=120  # 2 minutes
SUMMARIZATION_TIMEOUT=60  # 1 minute

# Model Settings
WHISPER_MODEL_SIZE=base  # Options: tiny, base, small, medium, large
USE_GPU=True  # Set to False to force CPU processing

# Cache Settings
CACHE_DIR=./.cache
ENABLE_CACHE=True 